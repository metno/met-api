# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Swagger - Root Resources Listing
GET     /api-docs                   controllers.ApiHelpController.getResources

GET     /v1/helloWorld              controllers.HelloWorldController.helloWorld
GET     /api-docs/v1/helloWorld     controllers.ApiHelpController.getResource(path = "/v1/helloWorld")

GET     /v2/helloWorld              controllers.HelloWorldController_v2.helloWorld
GET     /api-docs/v2/helloWorld     controllers.ApiHelpController.getResource(path = "/v2/helloWorld")

GET     /api-docs/points            controllers.ApiHelpController.getResource(path = "/points")
GET     /v0/points                  @controllers.PointController.getPoints(sources, places : Option[String], reftime : Option[String], validtime : Option[String], parameters : Option[String], fields : Option[String], limit : Option[String], offset : Option[String], namespace : Option[String])

GET     /api-docs/sourceStations    controllers.ApiHelpController.getResource(path = "/sourceStations")
GET     /v0/sourceStations          @controllers.StationController.getStations(sources : Option[String], places : Option[String], validtime : Option[String], parameters : Option[String], timeSeriesTypes : Option[String], fields : Option[String], limit : Option[String], offset : Option[String], namespace : Option[String])
GET     /v0/sourceStations/:id      @controllers.StationController.getStationsById(id)

GET     /api-docs/parameters        controllers.ApiHelpController.getResource(path = "/parameters")
GET     /v0/parameters              @controllers.ParameterController.getParameters(parameters : Option[String], fields : Option[String], limit : Option[String], offset : Option[String], namespace : Option[String])
GET     /v0/parameters/:id          @controllers.ParameterController.getParameterById(id)
POST    /v0/parameters              @controllers.ParameterController.addParameter
PUT     /v0/parameters              @controllers.ParameterController.updateParameter

GET     /api-docs/places            controllers.ApiHelpController.getResource(path = "/places")
GET     /v0/places                  @controllers.PlaceController.getPlaces(places : Option[String], fields : Option[String], limit : Option[String], offset : Option[String], namespace : Option[String])
GET     /v0/places/:id              @controllers.PlaceController.getPlaceById(id)
POST    /v0/places                  @controllers.PlaceController.addPlace
PUT     /v0/places                  @controllers.PlaceController.updatePlace

# Map static resources from the /app/public folder to the /public path
GET     /api-docs/fileservice       controllers.ApiHelpController.getResource(path = "/fileservice")
POST    /v0/fileservice             @controllers.FileServiceController.uploadMultipart
GET     /v0/fileservice             @controllers.FileServiceController.download( refid: String )

# Map static resources from the /app/public folder to the /public path
GET     /swagger-2.1.0-M1/*file     controllers.Assets.at(path="/public/swagger-2.1.0-M1", file)
GET     /swagger-ui                 controllers.Application.swaggerUi


# Map static resources from the /public folder to the /assets URL path
#
GET     /assets/*file               controllers.Assets.at(path="/public", file)

