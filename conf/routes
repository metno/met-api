# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Default.redirect(to = "/index.html")
GET     /index.html                 controllers.Application.index

# Swagger - Root Resources Listing
GET     /api-docs                   controllers.ApiHelpController.getResources

# Tests
GET     /tests/hello                controllers.TestController.hello
GET     /api-docs/tests             controllers.ApiHelpController.getResource(path = "/tests")

# Map static resources from the /app/public folder to the /public path
GET     /docs/*file                 controllers.Assets.at(path="/public/swagger-ui", file)
GET     /docs                       controllers.Application.docs

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

########################
# Define plugins here
#
# Note that the plugin libraries must be installed in /lib (or via Maven) or you will get a compilation error
########################

# Authorization
->       /auth                      authorization.Routes

# Observations
->      /kdvh                       kdvh.Routes
GET     /api-docs/kdvh              controllers.ApiHelpController.getResource(path = "/kdvh")

