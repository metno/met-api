# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Default.redirect(to = "/index.html")
GET     /index.html                 controllers.Application.index

# Swagger - Root Resources Listing
GET     /api-docs                   pl.matisoft.swagger.ApiHelpController.getResources

# Tests
GET     /tests/hello                controllers.TestController.hello
GET     /tests/secureHello          controllers.TestController.secureHello
GET     /api-docs/tests             pl.matisoft.swagger.ApiHelpController.getResource(path = "/tests")

# Map static resources from the /app/public folder to the /public path
GET     /docs/*file                 controllers.Assets.at(path="/public/swagger-ui", file)
GET     /docs                       controllers.Application.docs

# Map static resources from the /public folder to the /assets URL path
GET     /images/*file               controllers.Assets.at(path="/public/images", file)
GET     /stylesheets/*file          controllers.Assets.at(path="/public/stylesheets", file)

########################
# Define plugins here
#
# Note that the plugin libraries must be installed in /lib (or dependencies) or you will get a compilation error
########################

# Authorization
->       /auth                      authorization.Routes

# Observations
->      /observations               observations.Routes
GET     /api-docs/observations      pl.matisoft.swagger.ApiHelpController.getResource(path = "/observations")

# Elements
->      /elements                   elements.Routes
GET     /api-docs/elements          pl.matisoft.swagger.ApiHelpController.getResource(path = "/elements")

